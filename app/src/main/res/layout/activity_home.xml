<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAct">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:background="@drawable/bg_input_primary"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_primary"
            android:fontFamily="@font/helregular"
            android:hint="@string/angka_label"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_primary"
            android:fontFamily="@font/helregular"
            android:hint="@string/angka_label"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helregular"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            tools:text="Hasil" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/mod_op"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_operation_rounded"
            android:text="Mod"
            android:fontFamily="@font/helregular"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/plus_op"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_operation_rounded"
            android:text="+"
            android:fontFamily="@font/helregular"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/min_op"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_operation_rounded"
            android:text="-"
            android:fontFamily="@font/helregular"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/kali_op"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_operation_rounded"
            android:text="x"
            android:fontFamily="@font/helregular"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/bagi_op"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_operation_rounded"
            android:text="/"
            android:fontFamily="@font/helregular"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>